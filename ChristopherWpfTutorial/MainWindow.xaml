        <TextBox x:Name="TextBlockName" HorizontalAlignment="Left" Margin="55,20,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="171"/><TextBox x:Name="TextBlockTitel" HorizontalAlignment="Left" Margin="226,20,0,0" TextWrapping="Wrap" Text="Titel" VerticalAlignment="Top"/>
